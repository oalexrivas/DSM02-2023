<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/NombresEditText"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/logoImageView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_text"
        android:elevation="2dp"
        android:hint="Nombres"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/ApellidosdEditText"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/NombresEditText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_text"
        android:elevation="2dp"
        android:hint="Apellidos"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/DuiEditText"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/ApellidosdEditText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_text"
        android:elevation="2dp"
        android:hint="Dui"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/TelefonoEditText"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/DuiEditText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_text"
        android:elevation="2dp"
        android:hint="TelÃ©fono"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/CarnetEditText"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/TelefonoEditText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_text"
        android:elevation="2dp"
        android:hint="Carnet"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <Button
        android:id="@+id/RegistrarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CarnetEditText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/button"
        android:text="GUARDAR"
        android:textColor="@color/white" />

</RelativeLayout>